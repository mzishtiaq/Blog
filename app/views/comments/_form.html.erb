<%= form_for([@article, @article.comments.build]) do |form| %>
  <div class="form-group">
    <%= form.label :user_name %><br>
    <%= form.text_field :user_name, class:"form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :body %><br>
    <%= form.text_area :body, class:"form-control", rows: "8" %>
  </div>
  <p>
    <%= form.submit "Submit", class:"btn btn-outlined btn-black" %>
  </p>
<% end %>
